{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "paths": {
      "@bubu-ui/components/*": ["./packages/components/src/*"]
    }
  },
  "exclude": ["node_modules", "scripts/*.mjs", "*.js"]
}